load("@rules_python//python/pip_install:requirements.bzl", "compile_pip_requirements")
load("//py:defs.bzl", "py_binary", "py_library", "py_wheel")

compile_pip_requirements(
    name = "requirements",
    requirements_in = "requirements.in",
    requirements_txt = "requirements.txt",
)

py_wheel(
    name = "django",
    src = "@pypi_django//:whl",
)

py_library(
    name = "lib",
    srcs = ["lib.py"],
)

py_binary(
    name = "main",
    srcs = ["__main__.py"],
    deps = [
        ":django",
        ":lib",
    ],
)
